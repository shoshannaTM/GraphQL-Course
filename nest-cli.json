{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "tsc",
    "tsConfigPath": "tsconfig.build.json",
    "plugins": [
      {
        "name": "@nestjs/graphql",       
        "options": {
          "typeFileNameSuffix": [".entity.ts", ".model.ts", ".input.ts", ".args.ts"],
          "introspectComments": true
        }
      }
    ]
  }
}
